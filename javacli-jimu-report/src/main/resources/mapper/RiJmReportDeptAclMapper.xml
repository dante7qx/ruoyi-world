<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spirit.report.mapper.RiJmReportDeptAclMapper">
    
    <resultMap type="RiJmReportDeptAcl" id="RiJmReportDeptAclResult">
        <result property="id"    column="id"    />
        <result property="reportId"    column="report_id"    />
        <result property="deptId"    column="dept_id"    />
    </resultMap>

    <sql id="selectRiJmReportDeptAclVo">
        select t.id, t.report_id, t.dept_id from jimu_report_dept_acl t
    </sql>

    <select id="selectRiJmReportDeptAclList" parameterType="RiJmReportDeptAcl" resultMap="RiJmReportDeptAclResult">
        <include refid="selectRiJmReportDeptAclVo"/>
        <where>  
            <if test="reportId != null  and reportId != ''"> and t.report_id = #{reportId}</if>
            <if test="deptId != null "> and t.dept_id = #{deptId}</if>
        </where>
    </select>
    
    <select id="selectRiJmReportDeptAclById" parameterType="Long" resultMap="RiJmReportDeptAclResult">
        <include refid="selectRiJmReportDeptAclVo"/>
        where t.id = #{id}
    </select>
        
    <insert id="insertRiJmReportDeptAcl" parameterType="RiJmReportDeptAcl" useGeneratedKeys="true" keyProperty="id">
        insert into jimu_report_dept_acl
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="reportId != null and reportId != ''">report_id,</if>
            <if test="deptId != null">dept_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="reportId != null and reportId != ''">#{reportId},</if>
            <if test="deptId != null">#{deptId},</if>
         </trim>
    </insert>

    <update id="updateRiJmReportDeptAcl" parameterType="RiJmReportDeptAcl">
        update jimu_report_dept_acl
        <trim prefix="SET" suffixOverrides=",">
            <if test="reportId != null and reportId != ''">report_id = #{reportId},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteRiJmReportDeptAclById" parameterType="Long">
        delete from jimu_report_dept_acl where id = #{id}
    </delete>

    <delete id="deleteRiJmReportDeptAclByIds" parameterType="String">
        delete from jimu_report_dept_acl where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <delete id="deleteRiJmReportDeptAclByReportId" parameterType="String">
        delete from jimu_report_dept_acl where report_id = #{reportId}
    </delete>
    
    <delete id="deleteRiJmReportDeptAclByDeptId">
        delete from jimu_report_dept_acl where dept_id = #{deptId} and report_id in 
         <foreach item="reportId" collection="reportIds" open="(" separator="," close=")">
            #{reportId}
        </foreach>
    </delete>
</mapper>
