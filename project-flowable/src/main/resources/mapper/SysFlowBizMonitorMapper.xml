<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.risun.flowable.mapper.SysFlowBizMonitorMapper">
    
    <resultMap type="SysFlowBizMonitor" id="SysFlowBizMonitorResult">
        <result property="monitorId"    column="monitor_id"    />
        <result property="bizUid"    column="biz_uid"    />
        <result property="procInstId"    column="proc_inst_id"    />
        <result property="status"    column="status"    />
        <result property="passed"    column="passed"    />
        <result property="finished"    column="finished"    />
        <result property="commited"    column="commited"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectSysFlowBizMonitorVo">
        select monitor_id, biz_uid, proc_inst_id, status, passed, finished, commited, create_by, create_time, update_by, update_time from sys_flow_biz_monitor
    </sql>

    <select id="selectSysFlowBizMonitorList" parameterType="SysFlowBizMonitor" resultMap="SysFlowBizMonitorResult">
        <include refid="selectSysFlowBizMonitorVo"/>
        <where>  
            <if test="bizUid != null  and bizUid != ''"> and biz_uid = #{bizUid}</if>
            <if test="procInstId != null  and procInstId != ''"> and proc_inst_id = #{procInstId}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="passed != null "> and passed = #{passed}</if>
            <if test="finished != null "> and finished = #{finished}</if>
        </where>
    </select>
    
    <select id="selectSysFlowBizMonitorByMonitorId" parameterType="Long" resultMap="SysFlowBizMonitorResult">
        <include refid="selectSysFlowBizMonitorVo"/>
        where monitor_id = #{monitorId}
    </select>
    <select id="selectSysFlowBizMonitorBybizUid" parameterType="String" resultMap="SysFlowBizMonitorResult">
        <include refid="selectSysFlowBizMonitorVo"/>
        where biz_uid = #{bizUid}
    </select>
        
    <insert id="insertSysFlowBizMonitor" parameterType="SysFlowBizMonitor" useGeneratedKeys="true" keyProperty="monitorId">
        insert into sys_flow_biz_monitor
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bizUid != null and bizUid != ''">biz_uid,</if>
            <if test="procInstId != null and procInstId != ''">proc_inst_id,</if>
            <if test="status != null">status,</if>
            <if test="passed != null">passed,</if>
            <if test="finished != null">finished,</if>
            <if test="commited != null">commited,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bizUid != null and bizUid != ''">#{bizUid},</if>
            <if test="procInstId != null and procInstId != ''">#{procInstId},</if>
            <if test="status != null">#{status},</if>
            <if test="passed != null">#{passed},</if>
            <if test="finished != null">#{finished},</if>
            <if test="commited != null">#{commited},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateSysFlowBizMonitor" parameterType="SysFlowBizMonitor">
        update sys_flow_biz_monitor
        <trim prefix="SET" suffixOverrides=",">
            <if test="bizUid != null and bizUid != ''">biz_uid = #{bizUid},</if>
            <if test="procInstId != null and procInstId != ''">proc_inst_id = #{procInstId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="passed != null">passed = #{passed},</if>
            <if test="finished != null">finished = #{finished},</if>
            <if test="commited != null">commited = #{commited},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where monitor_id = #{monitorId}
    </update>

    <delete id="deleteSysFlowBizMonitorByMonitorId" parameterType="Long">
        delete from sys_flow_biz_monitor where monitor_id = #{monitorId}
    </delete>
    
    <delete id="deleteSysFlowBizMonitorByBizUid" parameterType="String">
        delete from sys_flow_biz_monitor where biz_uid = #{bizUid}
    </delete>
    
    <delete id="deleteSysFlowBizMonitorByProcInstId" parameterType="String">
        delete from sys_flow_biz_monitor where proc_inst_id = #{procInstId}
    </delete>

    <delete id="deleteSysFlowBizMonitorByMonitorIds" parameterType="String">
        delete from sys_flow_biz_monitor where monitor_id in 
        <foreach item="monitorId" collection="array" open="(" separator="," close=")">
            #{monitorId}
        </foreach>
    </delete>
</mapper>