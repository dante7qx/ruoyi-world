<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.risun.flowable.mapper.SysFlowGroupMapper">
    
    <resultMap type="SysFlowGroup" id="SysFlowGroupResult">
        <result property="groupId"    column="group_id"    />
        <result property="groupName"    column="group_name"    />
        <result property="groupKey"    column="group_key"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectSysFlowGroupVo">
        select group_id, group_name, group_key, remark, create_by, create_time, update_by, update_time from sys_flow_group
    </sql>

    <select id="selectSysFlowGroupList" parameterType="SysFlowGroup" resultMap="SysFlowGroupResult">
        <include refid="selectSysFlowGroupVo"/>
        <where>  
            <if test="groupName != null and groupName != ''"> and group_name like concat('%', #{groupName}, '%')</if>
            <if test="groupKey != null and groupKey != ''"> and group_key = #{groupKey}</if>
        </where>
    </select>
    
    <select id="selectSysFlowGroupByGroupId" parameterType="Long" resultMap="SysFlowGroupResult">
        <include refid="selectSysFlowGroupVo"/>
        where group_id = #{groupId}
    </select>
        
    <insert id="insertSysFlowGroup" parameterType="SysFlowGroup" useGeneratedKeys="true" keyProperty="groupId">
        insert into sys_flow_group
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="groupName != null">group_name,</if>
            <if test="groupKey != null">group_key,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="groupName != null">#{groupName},</if>
            <if test="groupKey != null">#{groupKey},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateSysFlowGroup" parameterType="SysFlowGroup">
        update sys_flow_group
        <trim prefix="SET" suffixOverrides=",">
            <if test="groupName != null">group_name = #{groupName},</if>
            <if test="groupKey != null">group_key = #{groupKey},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where group_id = #{groupId}
    </update>

    <delete id="deleteSysFlowGroupByGroupId" parameterType="Long">
        delete from sys_flow_group where group_id = #{groupId}
    </delete>

    <delete id="deleteSysFlowGroupByGroupIds" parameterType="String">
        delete from sys_flow_group where group_id in 
        <foreach item="groupId" collection="array" open="(" separator="," close=")">
            #{groupId}
        </foreach>
    </delete>
    
</mapper>